<!DOCTYPE html>
<html>
<head>
  <title>Sensei</title>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>


<header class"container">
    <nav class="navbar navbar-default">
        <div class="navbar-header">
          <% if current_account %>
            <%= link_to current_account.subdomain , root_path, class: 'navbar-brand' %>
          <% else %>
            <%= link_to 'Sensei', root_path, class: 'navbar-brand' %>
          <% end %>
        </div>

        <div class="pull-right right-button">
        <% if user_signed_in? %>
            <%= link_to 'Sign out', destroy_user_session_path, method: 'delete', class: 'btn btn-default navbar-btn' %>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'New Course', new_project_path %></li>
          <li><%= link_to 'Users', users_path %></li>
        </ul>

          <div class="pull-right right-button">
            <% elsif !user_signed_in? && current_account%>
            <%= link_to 'Sign in', users_path, class: 'btn btn-default navbar-btn' %>
          </div>
        <% end %>
    </nav>

</header>



<div class="container">

    <%= flash_messages if show_layout_flash? %>

    <div class="row">

        <%= yield %>
    
    </div>

</div>

</body>
</html>
